{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "command": "deno run --allow-read=.,../dist/ --allow-write=../dist/ ./clean.ts"
    },
    {
      "label": "generateOutput",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "command": "deno run --allow-net=www.w3.org --allow-write=..,../dist generateOutput.ts"
    },
    {
      "label": "Run all scripts",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "dependsOn": ["clean", "generateOutput"],
      "dependsOrder": "sequence"
    }
  ]
}
